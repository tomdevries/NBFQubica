@model NBF.Qubica.CMS.Models.OpentimeModel
@{
    ViewBag.Title = "Wijzigen Openingstijd";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<section id="opentimeForm">
<h2></h2>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Opentime Form</legend>
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.BowlingcenterId)
        <ol>
            <li>
                @Html.LabelFor(m => m.Day)
                @Html.DropDownListFor(m => m.Day, Model.Days, String.Empty)
                @Html.ValidationMessageFor(m => m.Day)
            </li>
            <li>
                @Html.LabelFor(m => m.Opentime)
                @Html.TextBoxFor(m => m.Opentime)
                @Html.ValidationMessageFor(m => m.Opentime)
            </li>
            <li>
                @Html.LabelFor(m => m.Closetime)
                @Html.TextBoxFor(m => m.Closetime)
                @Html.ValidationMessageFor(m => m.Closetime)
            </li>
        </ol>
        <input type="submit" value="Sla op" />
        <input type="button" value="Ga terug" onclick="javascript: window.history.go(-1); return false;" />
    </fieldset>
}
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
