@{
    var grid = new WebGrid(Model,
                           canPage: true,
                           rowsPerPage: 10,
                           selectionFieldName: "selectedRow",
                           ajaxUpdateContainerId: "gridContent");
    grid.Pager(WebGridPagerModes.All);
}

<h2>Challenges</h2>
<section>
    <div id="gridContent">
        @grid.GetHtml(
            tableStyle: "webGrid",
            headerStyle: "header",
            alternatingRowStyle: "alt",
            selectedRowStyle: "select",
            footerStyle: "footer",
            fillEmptyRows: true,
            columns: grid.Columns(
                        grid.Column("Id", "Nummer"),
                        grid.Column("Omschrijving", format: (item) => Html.ActionLink((string)item.Name, "Competition", "Competition", new { id = item.id }, null))
                    )
            )
    </div>
</section>

