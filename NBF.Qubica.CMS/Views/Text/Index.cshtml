@{
    var grid = new WebGrid(Model,
                           canPage: true,
                           rowsPerPage: 10,
                           selectionFieldName: "selectedRow",
                           ajaxUpdateContainerId: "gridContent");
    grid.Pager(WebGridPagerModes.All);
}

<h2>Teksten</h2>
<section>
    <div id="gridContent">
        @grid.GetHtml(
            tableStyle: "webGrid",
            headerStyle: "header",
            alternatingRowStyle: "alt",
            selectedRowStyle: "select",
            footerStyle: "footer",
            fillEmptyRows: true,
            columns: grid.Columns(
                        grid.Column(format: (item) => Html.ActionLink("Aanpassen", "Edit", "Text", new { id = item.id }, null)),
                        grid.Column("Id", "Nummer"),
                        grid.Column("Label", "Label")
                    )
            )
    </div>
</section>
